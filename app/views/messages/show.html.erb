<% title t '.title' %>
<h1><%= t '.title' %></h1>

<table>
<% @conversation.each do |message| %>
  <tr>
    <td><%= message.subject %></td>
    <td><%= message.body %></td>
    <td><%= message.sender_id %></td>
    <td><%= message.recipient_id %></td>
    <td>
    	<%= "#{distance_of_time_in_words_to_now(message.created_at)} #{t(:ago, scope: 'datetime.distance_in_words')}" %>
    </td>
  </tr>
<% end %>
</table>