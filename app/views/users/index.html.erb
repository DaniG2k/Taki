<% title 'Users List' %>
<h1>Users#index</h1>

<p>Find me in app/views/users/index.html.erb</p>

<% if current_user.tutor %>
	Current user is a tutor
<% else %>
	Current user is not a tutor
<% end %>

<ol>
<% @users.each do |user| %>
	<li>
		<strong><%= user.fullname %></strong>
		<ul>
			<% if user.avatar_url.present? %>
			<li><%= image_tag user.avatar_url.to_s, :class => "thumbnail" %></li>
			<% end %>
			<li><%= user.email %></li>
			<li><%= user.gender %></li>
			<li><%= user.birthday %></li>
		</ul>
	</li>
<% end %>
</ol>
