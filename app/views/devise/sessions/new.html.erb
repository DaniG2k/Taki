<% title t('sign_in', scope: 'devise.sessions.new') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<h1 class="text-center"><%= t('sign_in', scope: 'devise.sessions.new') %></h1>

		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { role: "form" }) do |f| %>

  	<div class="form-group">
  		<%= f.email_field :email, :autofocus => true, :placeholder => t('email', scope: 'activerecord.attributes.user'), :class => "form-control" %>
  	</div>
  	<div class="form-group">
  		<%= f.password_field :password, :placeholder => t('password', scope: 'activerecord.attributes.user'), :class => "form-control" %>
  	</div>

  	<% if devise_mapping.rememberable? -%>
  	<div class="checkbox">
  		<label><%= f.check_box :remember_me %> <%= t('remember', scope: 'devise.sessions.new') %></label>
  	</div>
  	<% end -%>
  	<%= f.submit t('sign_in', scope: 'devise.sessions.new'), :class => 'btn btn-primary' %>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
</div>