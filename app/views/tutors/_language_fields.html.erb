<fieldset>
	<%= f.text_field :language, placeholder: "#{t(:language, scope: 'activerecord.attributes.languages')}" %>
	<%= f.select(:proficiency, options_for_select([
		["#{t(:beginner, scope: 'activerecord.attributes.languages.level')}", 1],
		["#{t(:intermediate, scope: 'activerecord.attributes.languages.level')}", 2],
		["#{t(:advanced, scope: 'activerecord.attributes.languages.level')}", 3],
		["#{t(:native, scope: 'activerecord.attributes.languages.level')}", 4]
		])) %>
	<%= f.hidden_field :_destroy %>
	<%= link_to "[remove]", "#", class: "remove_fields" %>
</fieldset>