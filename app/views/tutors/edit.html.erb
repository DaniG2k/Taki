<% title t '.title' %>
<h1><%= t '.title' %></h1>

<%= render "errors" %>

<% if current_user.is_tutor? %>
<ul class="nav nav-tabs">
  <%= content_tag(:li, link_to(t('edit_profile', scope: 'common'), edit_user_registration_path)) %>
  <%= content_tag(:li, link_to(t('edit_tutor_profile', scope: 'common'), edit_tutor_path(current_user.tutor)), class: "active") %>
</ul>
<% end %>

<%= form_for @tutor do |f| %>
  <%= f.label :description, t('description', scope: 'activerecord.attributes.tutor') %><br />
	<%= f.text_area :description %><br />
	
	<%= f.label :rate, t('rate', scope: 'activerecord.attributes.tutor') %><br />
	<%= f.text_field :rate %><br />
	<br />
	<%= t('current_country', scope: 'globals') %><br />
	<%= country_select(:tutor, :country) %><br />
	<br />
	<%= f.label :city %>
	<%= f.text_field :city %><br />
	<br />
	<%= f.label :postalcode, 'Postal Code' %>
	<%= f.text_field :postalcode %><br />
	<br />
	<%= f.label :street %>
	<%= f.text_field :street %><br />
	<br />
	<%= f.hidden_field :address %>
	
	<%= f.label :educational_experiences, t('education', scope: 'activerecord.attributes.tutor') %>	
	<%= f.fields_for :educational_experiences do |builder| %>
		<%= render 'educational_experience_fields', f: builder %>
	<% end %>
	<%= link_to_add_fields "Add field", f, :educational_experiences %>
	<br />
  
  <%= f.label :languages, t('languages', scope: 'activerecord.attributes.tutor') %>	
	<%= f.fields_for :languages do |builder| %>
		<%= render 'language_fields', f: builder %>
	<% end %>
	<%= link_to_add_fields "Add field", f, :languages %>
	<br />
  
  <%= f.submit "Submit" %>
<% end %>
<%= render "footer_links" %>
