<% title 'Tutors List' %>
<h1>Tutors#index</h1>

<%= paginate @tutors %>

<ol>
<% @tutors.each do |tutor| %>
	<li>
		<strong><%= link_to "#{tutor.user.first_name} #{tutor.user.last_name}", new_conversation_path(:recipient_id => tutor) %></strong>
		<ul>
			<li>About: <%= tutor.description%></li>
			<li>Rate: <%= tutor.rate %></li>
			<li>Country: <%= tutor.country %></li>
		</ul>
	</li>
<% end %>
</ol>

<% if @tutor %>
	<%= link_to 'Edit Tutor', edit_tutor_path(@tutor) %>
<% else %>
	<%= link_to 'Become a tutor', new_tutor_path %>
<% end %>
