<% title t '.title' %>
<h1><%= t '.title' %></h1>

<p>
	<%= flash[:success] %>
</p>

<div>
	<strong><%= t(:description, scope: 'activerecord.attributes.tutor') %></strong> <%= @tutor.description%><br />
	<strong><%= t(:rate, scope: 'activerecord.attributes.tutor') %></strong> <%= @tutor.rate %><br />
	<strong><%= t(:country, scope: 'activerecord.attributes.tutor') %></strong> <%= @tutor.country %><br />
	<strong>Address:</strong> <%= @tutor.address %><br />
	<p>
		<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x450&sensor=false&zoom=16&markers=#{@tutor.latitude}%2C#{@tutor.longitude}" %>
		<p>
			<%= t(:education, scope: 'activerecord.attributes.tutor') %>
		</p>
		<% @educational_experiences.each do |education| %>
			<strong><%= t(:university, scope: 'activerecord.attributes.educational_experiences') %>:</strong> <%= education.university %><br />
			<strong><%= t(:major, scope: 'activerecord.attributes.educational_experiences') %>:</strong> <%= education.major %><br />
			<strong><%= t(:minor, scope: 'activerecord.attributes.educational_experiences') %>:</strong> <%= education.minor %><br />
		<% end %>
		
		<% @languages.each do |lang_info| %>
			<strong><%= t(:language, scope: 'activerecord.attributes.languages') %>:</strong> <%= lang_info.language %><br />
			<strong><%= t(:proficiency, scope: 'activerecord.attributes.languages') %>:</strong> <%= lang_info.proficiency %><br />
		<% end %>
	</p>
</div>

<%= render "footer_links" %>