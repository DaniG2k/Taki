<h1>Showing Conversations</h1>
<p>
	Conversation id: <%= @conversation.id %><br />
	<h2>Messages</h2>
	<% @conversation.messages.each do |message| %>
		<p>
			<strong>Subject:</strong>
			<%= message.subject %>
		</p>
		<p>
			<strong>Body:</strong>
			<%= message.body %>
		</p>
	<% end %>
	
	<h2>Add a message:</h2>
	<%= form_for([@conversation, @conversation.messages.build]) do |f| %>
		<p>
			<%= f.label :subject %>
			<%= f.text_field :subject %>
			<br />
			<%= f.label :body %>
			<%= f.text_area :body %>
		</p>
		<p>
			<%= f.submit %>
		</p>
	<% end %>
</p>
<%= link_to 'Back to Conversations', conversations_path %>
